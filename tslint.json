{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended","tslint-config-prettier"],
  "jsRules": {},
  "linterOptions": {
    "exclude": ["./__tests__/**/*.ts"]
  },
  "rules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "variable-name": [true, "allow-leading-underscore", "allow-snake-case"],
    "quotemark": false,
    "adjacent-overload-signatures": true,
    "ban-ts-ignore": true,
    "ban-types": false,
    "member-access":true,
    "member-ordering":[true, "instance-sandwich"],
    "no-any":false,
    "no-empty-interface":false,
    "no-inferrable-types":true,
    "no-non-null-assertion":true,
    "only-arrow-functions":true,
    "prefer-for-of": true,
    "promise-function-async": true,
    "unified-signatures": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "curly": true,
    "forin": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": false,
    "no-this-assignment": [true, {"allow-destructuring": true, "allowed-names": ["^self$"]}],
    "no-unbound-method": [true, {"ignore-static": true, "allow-typeof": true}],
    "no-unnecessary-class": [true, "allow-empty-class", "allow-constructor-only"],
    "prefer-object-spread": true,
    "triple-equals":true,
    "max-classes-per-file":[true, 5],
    "prefer-const": true,
    "prefer-readonly": true,
    "prefer-template": true,
    "arrow-return-shorthand": true,
    "comment-format": true,
    "class-name": true,
    "interface-over-type-literal": true,
    "interface-name": false,
    "match-default-export-name": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "file-name-casing": [true, "snake-case"],
    "ordered-imports": true,
    "prefer-method-signature": true,
    "prefer-while": true,
    "prefer-switch": true,
    "space-within-parens": true
  },
  "rulesDirectory": []
}
